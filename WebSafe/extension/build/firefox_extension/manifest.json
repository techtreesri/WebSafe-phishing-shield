{
    "manifest_version": 2,
    "name": "Phishing Shield",
    "version": "1.0.0",
    "description": "Detect phishing websites using AI-powered analysis",
    "permissions": [
      "activeTab",
      "tabs",
      "http://localhost:5000/*"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Phishing Shield",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'",
    "web_accessible_resources": ["icons/*"]
  }